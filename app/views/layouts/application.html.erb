<!DOCTYPE html>
<html>
  <head>
    <title>Awesome Store</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://code.jquery.com/jquery-3.2.1.min.js' %>
    <%= stylesheet_link_tag 'http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css' %>
    <%= javascript_include_tag 'http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js' %>

    <%= csrf_meta_tags %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row" style="background-color: #ccc;">
        <div class="col-xs-6">
          <h1>Awesome Store</h1>
        </div>
        <div class="col-xs-6 text-right">
          <div class="row">
            <div class="col-xs-12">
              <%= render 'layouts/user' %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <h1 class="cart-text">
                <%= render 'layouts/cart_text' %>
              </h1>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <%= link_to "Home", root_url, class: "btn btn-link" %>
        </div>
      </div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: "alert alert-#{name}" %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
